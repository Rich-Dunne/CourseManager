<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodel="clr-namespace:CourseManager.ViewModels"
             x:Class="CourseManager.Views.EditAssessmentsPage"
             x:DataType="viewmodel:EditAssessmentsViewModel"
             Title="{Binding Title}"
             Shell.PresentationMode="Modal">
    <ContentPage.BindingContext>
        <viewmodel:EditAssessmentsViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <ContentView>
            <ScrollView>
                <StackLayout>
                    <Frame HasShadow="True" BackgroundColor="#e9e6d9" BorderColor="DarkGray">
                        <StackLayout HorizontalOptions="FillAndExpand" >
                            <Label Text="Assessment Information" FontSize="Title" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#002f51"/>
                        </StackLayout>
                    </Frame>

                    <StackLayout Padding="20">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Assessment Name" TextColor="#002f51" FontSize="Subtitle" FontAttributes="Bold"/>
                            <Label Text="{Binding AssessmentNameErrorMessage}" IsVisible="{Binding ShowAssessmentNameErrorMessage}" TextColor="Red" FontSize="Small" VerticalTextAlignment="Center"/>
                        </StackLayout>
                        <Entry Text="{Binding AssessmentName}" Keyboard="Text"/>

                        <Label Text="Assessment Type" TextColor="#002f51" FontSize="Subtitle" FontAttributes="Bold"/>
                        <Picker ItemsSource="{Binding AssessmentTypes}" SelectedItem="{Binding AssessmentType}" SelectedIndex="{Binding PickerIndex}"/>

                        <Label Text="Due Date" TextColor="#002f51" FontSize="Subtitle" FontAttributes="Bold"/>
                        <DatePicker MinimumDate="{Binding MinDueDate}" MaximumDate="{Binding MaxDueDate}" Date="{Binding DueDate}"/>
                    </StackLayout>

                    <StackLayout Padding="20, 0, 20, 20" IsVisible="{Binding HasSecondAssessment}">
                        <BoxView HorizontalOptions="FillAndExpand" WidthRequest="1" HeightRequest="1" Color="#e9e6d9"/>

                        <StackLayout Orientation="Horizontal">
                            <Label Text="Assessment Name" Padding="0, 10, 0, 0" TextColor="#002f51" FontSize="Subtitle" FontAttributes="Bold"/>
                            <Label Text="{Binding AssessmentNameErrorMessage}" IsVisible="{Binding ShowSecondAssessmentNameErrorMessage}" TextColor="Red" FontSize="Small" VerticalTextAlignment="Center"/>
                        </StackLayout>
                        <Entry Text="{Binding SecondAssessmentName}" Keyboard="Text"/>

                        <Label Text="Assessment Type" TextColor="#002f51" FontSize="Subtitle" FontAttributes="Bold"/>
                        <Picker ItemsSource="{Binding AssessmentTypes}" SelectedItem="{Binding SecondAssessmentType}" SelectedIndex="{Binding SecondPickerIndex}" IsEnabled="False"/>

                        <Label Text="Due Date" TextColor="#002f51" FontSize="Subtitle" FontAttributes="Bold"/>
                        <DatePicker MinimumDate="{Binding MinDueDate}" MaximumDate="{Binding MaxDueDate}" Date="{Binding SecondDueDate}"/>
                    </StackLayout>

                    <StackLayout Padding="0, 0, 20, 0">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Enable Alerts" Padding="20, 0, 0, 0" TextColor="#002f51" FontSize="Subtitle" FontAttributes="Bold" HorizontalOptions="FillAndExpand"/>
                            <Switch IsToggled="{Binding EnableAlerts}" ThumbColor="#4486a1" OnColor="CadetBlue"/>
                        </StackLayout>
                        
                        <Button Text="+ Assessment" FontSize="Small" HorizontalOptions="End" BackgroundColor="#4486a1" Command="{Binding AddSecondAssessmentCommand}" IsVisible="{Binding ShowAddAssessmentButton}"/>
                        <Button Text="- Assessment" FontSize="Small" HorizontalOptions="End" BackgroundColor="#4486a1" Command="{Binding RemoveSecondAssessmentCommand}" IsVisible="{Binding HasSecondAssessment}"/>
                    </StackLayout>

                    <StackLayout Padding="20">
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                            <Button Text="Back" BackgroundColor="Gray" Command="{Binding NavigateBackCommand}"/>
                            <Button Text="Save" Command="{Binding SaveCommand}"/>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </ContentView>
    </ContentPage.Content>
</ContentPage>